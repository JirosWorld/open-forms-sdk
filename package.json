{
  "name": "open-forms-sdk",
  "version": "1.0.2",
  "private": true,
  "dependencies": {
    "@formio/protected-eval": "^1.2.1",
    "@fortawesome/fontawesome-free": "^5.14.0",
    "@sentry/react": "^6.13.2",
    "@sentry/tracing": "^6.13.2",
    "@testing-library/jest-dom": "^5.11.4",
    "@testing-library/react": "^11.1.0",
    "@testing-library/user-event": "^12.1.10",
    "classnames": "^2.3.1",
    "ejs-loader": "^0.5.0",
    "flatpickr": "^4.6.9",
    "formiojs": "^4.12.7",
    "ibantools": "^3.3.0",
    "immer": "^9.0.6",
    "leaflet": "^1.7.1",
    "microscope-sass": "^1.0.4",
    "moment": "^2.29.1",
    "proj4leaflet": "^1.0.2",
    "prop-types": "^15.7.2",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "react-formio": "^4.3.0",
    "react-scripts": "4.0.3",
    "react-intl": "^5.20.5",
    "react-leaflet": "^3.2.2",
    "react-modal": "3.14.3",
    "react-router-dom": "^5.2.0",
    "react-use": "^17.2.4",
    "sass": "^1.32.12",
    "state-pool": "^0.6.0",
    "uri-js": "^4.4.1",
    "use-immer": "^0.5.1"
  },
  "scripts": {
    "start": "react-scripts start",
    "build": "react-scripts build",
    "test": "react-scripts test",
    "eject": "react-scripts eject",
    "makemessages-en": "formatjs extract 'src/**/*.js' --format scripts/i18n-formatter.js --out-file src/i18n/messages/en.json --id-interpolation-pattern '[sha512:contenthash:base64:6]'",
    "makemessages-nl": "formatjs extract 'src/**/*.js' --format scripts/i18n-formatter.js --out-file src/i18n/messages/nl.json --id-interpolation-pattern '[sha512:contenthash:base64:6]'",
    "makemessages": "yarn run makemessages-nl && yarn run makemessages-en",
    "compilemessages": "formatjs compile-folder --ast src/i18n/messages src/i18n/compiled"
  },
  "eslintConfig": {
    "extends": [
      "react-app",
      "react-app/jest"
    ],
    "rules": {
      "react/style-prop-object": [
        "error",
        {
          "allow": [
            "FormattedNumber",
            "FormattedDateParts",
            "FormattedRelativeTime"
          ]
        }
      ]
    }
  },
  "browserslist": [
    ">0.2%",
    "not dead",
    "not op_mini all"
  ],
  "devDependencies": {
    "@formatjs/cli": "^4.2.33",
    "babel-plugin-formatjs": "^10.3.8",
    "react-test-renderer": "^17.0.2",
    "typescript": "^4.4.3",
    "yargs": "^17.1.1"
  },
  "babel": {
    "plugins": [
      [
        "formatjs",
        {
          "idInterpolationPattern": "[sha512:contenthash:base64:6]",
          "ast": true
        }
      ]
    ]
  }
}
