<!-- rendered by both radio and selectboxes component -->
{% ctx.values.forEach(function(item) { %}
<div class="utrecht-form-field utrecht-form-field--radio utrecht-form-field--openforms">
  <input
    ref="input"
    value="{{item.value}}"
    id="{{ctx.id}}{{ctx.row}}-{{item.value}}"

    {% for (var attr in ctx.input.attr) { %}
    {{attr}}="{{ctx.input.attr[attr]}}"
    {% } %}

    {% if (ctx.value && (ctx.value === item.value || (typeof ctx.value === 'object' && ctx.value.hasOwnProperty(item.value) && ctx.value[item.value]))) { %}
    checked=true
    {% } %}
  >
  <p class="utrecht-paragraph utrecht-form-field__label utrecht-form-field__label--radio">
    <label
      for="{{ctx.id}}{{ctx.row}}-{{item.value}}"
      class="utrecht-form-label utrecht-form-label--radio {% if (ctx.disabled) { %}utrecht-form-label--disabled{% } %}"
    >
      {{ item.label }}
    </label>
  </p>
</div>
{% }) %}
